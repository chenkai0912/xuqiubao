<!DOCTYPE HTML>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="maximum-scale=1.0, minimum-scale=1.0, user-scalable=0, initial-scale=1.0, width=device-width" />
		<meta name="format-detection" content="telephone=no, email=no, date=no, address=no">
		<title>我的收藏</title>
		<link rel="stylesheet" type="text/css" href="../../css/api.css" />
		<link rel="stylesheet" type="text/css" href="../../css/ranking_list_win.css" />
		<script type="text/javascript" src="../../script/flexible.js"></script>
	</head>
	<body>
		<header id="header" class="rank_header">
			<p class="rank_content"><img class="rank_back" src="../../image/rank/rank_back.png" tapmode onclick="api.closeWin()">我的收藏
			</p>
		</header>
		<div class="tabs" id="tabs">
			<div class="tab tab_left" :class="(index==0)&&'tab_active'" tapmode="meui_click" onclick="fnChangeFrame(0)">
				社区（<span class="community_count">0</span>）
			</div>
			<div class="tab tab_right" :class="(index==1)&&'tab_active'" tapmode="meui_click" onclick="fnChangeFrame(1)">
				顺逛学院（<span class="class_count">0</span>）
			</div>
		</div>
	</body>
	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/mapi.js"></script>
	<script type="text/javascript" src="../../script/vue.js"></script>
	<script type="text/javascript">
		var myVue = null;
		apiready = function() {
			//fnRefreshOpen();
            fnBackListener(fnBack)
			fnInitVue();
			var header = $api.byId('header');
			fnSysHeaderStyleById();
			var headerH = $api.offset(header).h;
			var tabsH = $api.offset(tabs).h;
			api.openFrameGroup({
				name : 'comments_win',
				rect : {
					x : 0,
					y : headerH + tabsH,
					w : 'auto',
					h : 'auto'
				},
				frames : [{
					name : 'my_collect_frame1',
					url : 'my_collect_frame1.html?v=' + new Date().getTime(),
				}, {
					name : 'my_collect_frame2',
					url : 'my_collect_frame2.html',
				}]
			}, function(ret, err) {
				var index = ret.index;
				myVue.index = index;
			});
            // setTimeout(fnRefreshOpen, 300);
        };
		function fnInitVue() {
			myVue = new Vue({
				el : "#tabs",
				data : {
					index : 0,
				}
			});
		}

		function fnChangeFrame(index) {
			myVue.index = index;
			api.setFrameGroupIndex({
				name : "comments_win",
				index : index,
				scroll : true,
			});
		}

		function fnSetTotalCount(type, count) {
			fnSetTxt('.' + type, count);
		}
	</script>
</html>
