.warp {
	padding: 16px;
}
.accumulatives {
	background-image: linear-gradient(-179deg, #FF6026 0%, #FF9526 99%);
	border-radius: 4px;
}
.accumulative_list {
	height: 88px;
	box-sizing: border-box;
	padding-top: 12px;
	padding-bottom: 14px;
}
.gglod {
	font-size: 10px;
	color: #fff;
	padding-left: 14px;
	padding-right: 14px;
}
.accumulative_list .glodimg {
	width: 25px;
	height: 25px;
	margin-right: 9px;
	vertical-align: middle;
}
.accumulative_list .details {
	padding-top: 8px;
	padding-left: 9px;
	color: #fff;
	text-align: center;
	display: flex;
}
.details .detail {
	line-height: 28px;
	font-size: 20px;
	flex: 1;
}
.detail_bor {
	border-right: 1px solid rgba(255, 255, 255, .3);
}
.sign {
	font-size: 10px;
}
/*列表*/
.reward_list{
    height: 44px;
    padding: 20px 0;
    display: flex;
    border-bottom: 1px solid #EEE;
}
.reward_li_img ,img{
    border-radius: 50%;
    height: 44px;
    width:44px;
}
.reward_li_cont{
    flex: 1;
    font-size: 14px;
    line-height:24px;
    margin-left: 18px;
}
.user_name{
    color: #333;
}
.date{
    color: #999;
}
.reward_li_right{
    width: 100px;
    text-align: right;
}
.reward_li_right img{
    height: 24px;
    width: auto;
    margin-right:2px;
}
.img_reply {
    display: inline-block;
    height: 16px;
    min-width: 44px;
    text-align: center;
    background: #FDC223;
    color: #FFF;
    font-size: 12px;
    line-height: 17px;
    padding:0 8px;
    border-radius: 8px;
    margin:4px 0 5px 0;
}