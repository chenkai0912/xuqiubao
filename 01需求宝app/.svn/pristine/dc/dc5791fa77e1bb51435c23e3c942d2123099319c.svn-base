.recommendations{
	padding-left: 16px;
	padding-right: 16px;
}
.recommendation_tit{
	padding-top: 15px;
	padding-bottom: 14px;
	border-bottom: 1px solid #EEE;
  position: relative;
}
.recommendation_tit span{
	border-left: 3px solid #FF6026;
	padding-left: 7px;
	height: 12px;
	line-height: 12px;
	font-size: 12px;
	color: #333;
}
.right_arrow{
  position: absolute;
  top: 10px;
  right: 0;
	width: 24px;
	height: 24px;
}
.recommendation_list{
	width: 100%;
	padding-top: 20px;
	padding-bottom: 20px;
	border-bottom: 1px solid #eee;
	display: flex;
	flex-flow: row;
	align-items: center;
}
.recommendation_list .list_header{
	width: 44px;
	height: 44px;
	position: relative;
}
.recommendation_list .list_header .dot{
	position: absolute;
	left: 50%;
	top: -5px;
	color: #fff;
	background-color: #FF6026;
	font-size: 10px;
	line-height: 12px;
	padding-left: 5px;
	padding-right: 5px;
	border-radius: 100px;
}
.recommendation_list .list_header img{
	border-radius: 50%;
	overflow: hidden;
	width: 100%;
	height: 100%;
}
.recommendation_list .list_cont{
	padding-left: 18px;
	font-size: 14px;
	flex: 1;
}
.recommendation_list .cont_name{
	line-height: 20px;
	color: #333;
}
.recommendation_list .cont_num{
	line-height: 20px;
	padding-top: 2px;
	color: #999;
}
.recommendation_list .list_time{
	font-size: 12px;
	line-height: 17px;
	color: #999;
}
/*send_mess.html*/
.send_search{
	padding: 10px 16px;
	border-bottom: 1px solid #eee;
}
.send_back{
	background: #F4F4F4;
	border-radius: 100px;
	display: flex;
	flex: 1;
	padding-left: 8px;
}
.search_icon {
    width: 24px;
    height: 24px;
    line-height: 28px;
    margin-top: 2px;
    background-image: url(../image/home/search_icon.png);
    background-size: 24px;
}
.search_txt{
	padding-left: 4px;
    line-height: 28px;
	font-size: 14px;
	color: #666;
}
.open_group{
	border-bottom: 1px solid #eee;
	line-height: 44px;
	font-size: 14px;
	color: #333;
}
.open_down{
	width: 24px;
	height: 24px;
	vertical-align: middle;
	margin-right: 4px;
}
/*mass_message.html*/
.selece_ed{
	width: 16px;
	height: 16px;
	vertical-align: middle;
}
.selece_rig{
	margin-right: 8px;
}