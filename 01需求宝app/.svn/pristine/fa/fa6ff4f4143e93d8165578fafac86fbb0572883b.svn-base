<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>选择标签</title>
    <link rel="stylesheet" type="text/css" href="../../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/aui.css"/>
    <style>
        .aui-left {
            color: #666;
            font-size: .85rem;
        }

        .aui-title {
            color: #000;
            font-size: .85rem;
        }

        input {
            color: #666;
            display: inline-block!important;
            width: calc(100% - 2rem)!important;
        }
        img{
            display: inline-block;
            width: 1.2rem;
            height: 1.2rem;
            vertical-align: middle;
        }
    </style>
</head>
<body>
<div class="wrap">
<header class="aui-bar aui-bar-nav aui-border-b">
    <a class="aui-pull-left">
        <span class="aui-left" tapmode onclick="api.closeWin();">取消</span>
    </a>
    <div class="aui-title">选择标签</div>
</header>
<div class="aui-padded-l-15 aui-padded-r-15">
    <img src="../../image/home/search_icon.png" alt=""><input class="aui-font-size-14 aui-margin-l-5" type="search" placeholder="搜索" onfocus="fnHideImg()" onblur="fnShowImg()" oninput="fnSearchTag()">
</div>
</div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/fastclick.js"></script>
<script type="text/javascript" src="../../script/vue.js"></script>
<script type="text/javascript" src="../../script/common.js"></script>
<script type="text/javascript">
    apiready = function () {
        $app.fixStatusBar();
        $app.openFrame('tag_frame','.wrap',null,null,{
            bounces : false
        })
    };
    function fnHideImg() {
        $api.css($api.dom('img'), 'display:none');
    }
    function fnShowImg() {
        $api.css($api.dom('img'), 'display:inline-block');
    }
    function fnSearchTag() {
        var keyWord = $api.val($api.dom('input'));
        if(keyWord != ''){
            api.execScript({
                frameName: 'tag_frame',
                script: 'circleVue.isShowConcern = false'
            });
        }else{
            api.execScript({
                frameName: 'tag_frame',
                script: 'circleVue.isShowConcern = true'
            });
        }
        api.execScript({
            frameName: 'tag_frame',
            script: 'circleVue.fnSearchTag("'+ keyWord +'")'
        });
    }
</script>
</html>
